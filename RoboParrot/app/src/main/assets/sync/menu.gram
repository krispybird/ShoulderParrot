#JSGF V1.0;

grammar menu;

public <phrase> = <direction phrase> | <manipulate phrase> | <converse phrase>;

<direction phrase> = (go | take me) to* <location>;
<location> = home;

<manipulate phrase> = (grab | pick up | fetch) <item>;
<item> = item | water | beverage | pop | juice | bottle;

<converse phrase> = how are you | how's it (going | hanging) | what's up;